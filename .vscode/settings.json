{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.options": {
    "overrideConfigFile": "eslint.config.js"
  },
  "prettier.printWidth": 100,
  "testing.defaultGutterClickAction": "contextMenu",
  "[json]": {
    "editor.formatOnSave": true
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Jest configuration for monorepo - Jest v30 compatible
  "jest.jestCommandLine": "yarn test",
  "jest.rootPath": ".",
  "jest.runMode": "on-save",
  // Jest v30 compatibility - force modern CLI args
  "jest.useDashedArgs": true,
  "jest.shell": {
    "path": "/bin/zsh",
    "args": []
  },
  // Test discovery settings
  "jest.disabledWorkspaceFolders": [],
  "jest.enabledWorkspaceFolders": [
    "packages/core",
    "packages/v5",
    "packages/v6",
    "packages/v7"
  ],
  // Minimal Jest settings for v30 compatibility
  "jest.pathToConfig": "jest.config.js",
  "jest.restartJestOnSnapshotUpdate": true,
  "jest.outputConfig": {
    "revealOutput": "on-run",
    "revealWithFocus": "test-results",
    "clearOnRun": "terminal"
  },
  // Testing panel settings
  "testing.openTesting": "neverOpen",
  "testing.automaticallyOpenPeekView": "never",
  "testing.followRunningTest": false,
  // File exclusions for better performance
  "files.exclude": {
    "**/node_modules": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/lib": true,
    "**/build": true,
    "**/*.tsbuildinfo": true
  },
  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/lib": true,
    "**/build": true
  }
}