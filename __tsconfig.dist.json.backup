{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "outDir": "./dist"
  },
  "files": [
    "src/Flex.tsx",
    "src/Flex.types.ts",
    "src/Flex.utils.ts",
    "src/index.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "demo",
    "tests",
    "jest.config.**",
    "jest-setup.ts",
    "rollup.config.js",
    "webpack.config.js",
    "coverage/",
    ".eslintrc.js",
    ".babelrc.js",
    ".babelrc",
    ".vscode/"
  ]
}